#!/usr/bin/env bash

set -evuo pipefail

helm upgrade --tiller-namespace="${K8S_NAMESPACE}" --install --namespace="${K8S_NAMESPACE}" "schip-spinnaker-webhook" "./helm/schip-spinnaker-webhook" \
    --set image.tag="${TRAVIS_COMMIT:-"latest"}" \
    --set secrets.token="${HEIMDALL_TOKEN}" \
    --set secrets.artifactoryUser="${ARTIFACTORY_USER}" \
    --set secrets.artifactoryPassword="${ARTIFACTORY_PWD}"
